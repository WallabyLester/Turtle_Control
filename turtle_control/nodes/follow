#!/usr/bin/env python

import rospy
from turtlesim.msg import Pose
from std_srvs.srv import Empty, EmptyResponse
import math
from turtle_control.srv import Start

waypoints = rospy.get_param("/waypoints")
#rospy.set_param(_dist_thresh)
_dist_thresh = 1

def callback(data):
        #rospy.loginfo(f"x: {data.x}, y: {data.y}")
        global x
        global y
        x = data.x
        y = data.y
        if x > 10 or y > 10 or x < 0 or y <0:
            return None
        else:
            return x, y

class Follow:
    # service to call the draw service from setup node and moves the turtle by waypoints
    def __init__(self):
        self.__draw = rospy.ServiceProxy("draw", Empty)
        self.__service = rospy.Service("restart", Start,self.distance)

    def distance(a, b):
        a = (x, y)
        b = [waypoints[0], waypoints[1]]
        distance = math.dist(a,b)
        print(distance)
        return distance 
    
    



if __name__ == "__main__":
        rospy.Subscriber("turtle1/pose", Pose, callback)
        rospy.init_node("follow")
        node = Follow()
        rospy.spin()




